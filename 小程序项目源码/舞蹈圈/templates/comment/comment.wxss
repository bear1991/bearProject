
/* 评论列表样式 */
.comment{
  margin: 32rpx 0;
  background: #FFF;
  margin-top: 1rpx;
}
.comNum{
  padding: 20rpx 0;
  color: #00ADDF;
  text-align: center;
}
.comList{
  padding: 20rpx 0;
}
.comment>.comList:last-child{
  border-bottom: none;
}
.comList:after{
  content: "";
  display: block;
  clear: both; 
}
.comList>.left,
.comList>.center,
.comList>.right{
  display: flex;
  flex-direction: column;
  justify-content: center;
  float: left;
  color: #4C4C52;
}
.comList>.left,
.comList>.right{
  width: 20%;
}
.comList>.left,
.comList>.right{
  align-items: center;
  min-height: 160rpx;
}
.comList>.left>image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.comList>.right>image{
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}
.comList>.right>text{
  font-size: 32rpx;
}
.comList>.center{
  align-items: flex-start;
  width: 60%;
  font-size: 32rpx;
}
.comList>.center>text:first-child,
.comList>.center>text:last-child{
  margin: 10rpx 0;
  font-size: 28rpx;
}
.comList>.center>text:nth-child(2){
  color: #CECECF;
}

.comMore{
  font-size: 32rpx;
  margin-bottom: 90rpx;
}

.headImg{
  width: 40rpx;
  height: 40rpx;
}
.textNumber{
  align-items: center;
  margin-top: 8rpx;
}

.pcomList{
  display: flex;
  flex-direction: row-reverse;
  padding-right: 20rpx;
  padding-left: 20rpx
}

.leftRoot{
  display: flex;
  flex: 1;
  flex-direction: row;
}

.userHead{
  width: 40rpx;
  height: 40rpx;
}

.pright{
  display: flex;
  flex-direction: column;
}

.pname{
  font-size: 26rpx;
  color:#595959;
}

.pcont{
  font-size: 30rpx;
  color:#000;
}

.ptime{
  font-size: 24rpx;
  color:#BABABA;
}

.childRoot{
  display: flex;
  flex-direction: row;
  margin-left: 45rpx;
  
}

.childRow{
  display: flex;
  flex-direction: column;
  margin-left: 100rpx;
  border-width: 0 0 0 8rpx;  
  border-color: #808080;  
  border-style: solid;
  padding-left: 10rpx  
}

.childName{
  font-size: 26rpx;
  color: #676767;
}

.childContent{
  font-size: 30rpx;
  color: #676767;
  margin-top: 6rpx
}
