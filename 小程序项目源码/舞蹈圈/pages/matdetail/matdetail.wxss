/* pages/matdetail/matdetail.wxss */

@import "../../wxParse/wxParse.wxss";

@import "../../templates/search/search.wxss";    /* 引入搜索查询模板样式 */
@import "../../templates/comment/comment.wxss";   /* 引入评论列表模板样式 */

.container>view{
  width: 100%;
  overflow: initial;
}


.list{
  position: relative;
  height: 300rpx;
  margin-bottom: 32rpx;
}
.list>image{
  display: block;
  width: 100%;
  height: 100%
}
.listInfo{
  position: absolute;
  bottom: 20rpx;
  right: 4rpx;
  height: 50rpx;
}
.listInfo:after{
  content: "";
  display: block;
  clear: both;
}
.listInfo>view{
  float: right;
  min-width: 160rpx;
  height: 100%;
  margin: 0 10rpx;
  background: rgba(0,0,0,.6);
  border-radius: 25rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #FFF;
}
.listInfo>view>image{
  width: 38rpx;
  height: 24rpx;
  margin: 14rpx 10rpx 0 0;
}
.list>.picBack{
  position: absolute;
  top: 20rpx;
  left: 24rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}


.menu{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  min-height: 100rpx;
  background: #141623;
  color: #FFF;
  font-size: 28rpx;
}
.menu>text{
  padding: 4rpx 16rpx;
}
.menu>text:nth-child(even){
  color: rgba(225,225,225,0.6);
}
.menu>.active{
  color: #F9D301;
}


.intro{
  margin: 32rpx 0;
  padding: 40rpx 0;
  background: #141623;
}
.intro>view,
.intro>button{
  margin: 0 40rpx;
}
.intro>.title,
.intro>.time{
  color: #FDFEFE;
  font-size: 34rpx;
}
.intro>.title{
  margin-bottom: 20rpx;
}
.intro>.time{
  margin: 20rpx 40rpx;
}
.intro>.content{
  color: #B2B3B4;
  font-size: 32rpx;
}
.intro>.content>view{
  padding-top: 20rpx; 
}
.intro>.purchase::after{
  content: "";
  display: block;
  clear: both;
}
.intro>.purchase{
  color: #FFF;
  font-size: 28rpx;
}
.intro>.purchase>button{
  float: right;
  width: 180rpx;
  height: 60rpx;
  background: #FFD800;
  line-height: 60rpx;
  border-radius: 30rpx;
}


.personListWrap{
  padding: 36rpx 0 0;
  background: #191A2C;
}
.personList{
  margin-bottom: 32rpx;
}
.personList>.title{
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 5%;
}
.personList>.title:after{
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 100%;
  background: #FFD800;
}
.personList>.title>text{
  padding: 0 8px;
  color: #C0C0C1;
  font-size: 28rpx;
}
.personList>.title>text:first-child{
  color: #FCFDFD;
  font-size: 36rpx;
}

.personList>.person{
  margin: 20rpx 0;
  padding: 0 2%;
}
.personList>.person:after{
  content: "";
  display: block;
  clear: both;
}
.personList>.person>view{
  float: left;
  width: 18%;
  margin: 0 1% 18rpx;
  text-align: center;
  color: #FFF;
  font-size: 24rpx;
  transform: scale(0.8);
}
.personList>.person>view>image{
  display: block;
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto 16rpx;
  border-radius: 50%;
}


.pictureList{
  margin: 32rpx 0 0;
  padding: 32rpx 0;
  background: #191A2C;
}
.pictureList>.title{
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 5%;
}
.pictureList>.title:after{
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 100%;
  background: #FFD800;
}
.pictureList>.title>text{
  color: #C0C0C1;
  font-size: 28rpx;
}
.pictureList>.title>text:first-child{
  color: #FCFDFD;
  font-size: 36rpx;
}
.pictureList>.picture{
  margin: 20rpx 0;
  padding: 0 2%;
} 
.pictureList>.picture>image{
  display: block;
  width: 100%;
  height: 360rpx;
}

.container{
  position: relative;
}
.hide{
  overflow: hidden;
}
.personShow{
  position: fixed;
  bottom: -60%;
  left: 0;
  width: 100%;
  height: 60%;
  border-radius: 24rpx 24rpx 0 0;
  background: rgb(255, 255, 255);
  transition: 0.4s;
}
.personShow>.personList{
  height: 100%;
}
.personShow>.personList>.headerTitle{
  position: relative;
  height: 16%;
  text-align: center;
  line-height: 100rpx;
}
.personShow>.personList>.headerTitle>image{
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 40rpx;
  height: 40rpx;
  padding: 0 8px;
}


.personCont{
  height: 80%;
  margin: 0;
  padding: 2%;
}
.scrollView{
  height: 100%;
  
}
.scrollView:after{
  content: "";
  display: block;
  clear: both;
}
.scroll{
  float: left;
  width: 18%;
  margin: 0 1% 18rpx;
  text-align: center;
  color: #000;
  font-size: 24rpx;
  transform: scale(0.8);
}
.avatar{
  display: block;
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto 16rpx;
  border-radius: 50%;
}



.slideup{
  bottom: 0;  
}
