/* pages/orderdetail/orderdetail.wxss */
page {  
  display: block;  
  min-height: 100%;  
  background-color: #F0F0F0;  
}

/*头部相关*/
.head{
  width: 100%;
  height: 120rpx;
  background: #D2A0A1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.head_text{
  font-size: 36rpx;
  color: white;
  margin-left: 20rpx;
}

.head_del{
  font-size: 28rpx;
  margin-right: 20rpx;
  color: white;
}

.head_address{
  width: 100%;
  background: white;
  padding: 20rpx;
}

.head_address_name{
  font-size: 28rpx;
  color: black;
}

.head_address_address{
  font-size: 24rpx;
  color:#6c6c6c;
  margin-top: 16rpx;
  margin-bottom: 30rpx;
}

/*中间相关*/

.middle_root{
  height: 90rpx;
  width: 100%;
  color: #F0F0F0;
  font-size: 90rpx;
  
}

.history{
  float: left;
  width: 100%;
  margin: 16rpx 1%;
  margin-top: 4rpx;
}
.order_middle{
  background: #F0F0F0;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.order_img{
  width: 140rpx;
  height: 140rpx;
  margin-right: 10rpx
}

.order_title{
  height: 80rpx;
  background-color: #FFF;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.order_title_text{
  font-size: 28rpx;
  color: #000;
  margin-left: 20rpx
}

.order_bottom{
  height: 80rpx;
  background-color: #FFF;
  width: 100%;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
}

.order_sum{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.order_sum_price{
  color:#BE3837;
  margin-right: 20rpx;
  font-size: 28rpx;
}

.sum_text{
  font-size: 26rpx;
  margin-left: 20rpx;
}
.goods_root{
  margin-left: 10rpx;
  margin-right: 10rpx;
  display: flex;
  flex-direction: column;
}

.goods_content_root{
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
}

.goods_price{
  color: #BE3837;
  font-size: 28rpx;
}

.goods_num{
  font-size: 28rpx;
}

.goods_name{
  font-size: 28rpx;
  color:black;
}

/*底部相关*/
.bottom_root {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 88rpx;
  background: #fff;
  padding: 8rpx;
  display: flex;
  flex:1;
  flex-direction: row-reverse;
}
.button{
  background: #F24646;
  color: white;
  font-size: 34rpx;
  width: 160rpx;
  margin-right: 20rpx;
}

.bottom_input{
  display: flex;
  flex:1;
  margin-left: 20rpx;
  font-size: 30rpx;
  align-items: center;
  height: 100%;
}