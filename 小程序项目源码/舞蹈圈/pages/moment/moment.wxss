/* pages/moment/moment.wxss */

@import "../../wxParse/wxParse.wxss";

.container{
  position: relative;
  height: 100%;
  background: #FFF;
}


.scrollView{
  height: 100%;
}

.scroll{
  margin: 20rpx 0;
}

.scroll:after,
.momentWrap>.cont:after{
  content: '';
  display: block;
  clear: both;
}
.momentPerson{
  float: left;
  width: 20%;
}
.momentPerson>image{
  display: block;
  width: 80rpx;
  height: 80rpx;
  margin: 8rpx auto 0;
  border-radius: 50%;
}
.momentWrap{
  float: left;
  width: 80%;
}
.momentWrap>.header{
  font-size: 28rpx;
}
.momentWrap>.header>view{
  margin-right: 6%;
}
.momentWrap>.header>view:first-child{
  margin: 2px 0 10rpx;
  color: #3A96FE;
  font-size: 32rpx;
}
.momentWrap>.header>view:last-child{
  word-wrap:break-word; 
  word-break:break-all;
}
.momentWrap>.cont{
  margin: 16rpx 0 0;
}
.momentWrap>.cont>view{
  float: left;
  width: 29%;
  height: 160rpx;
  margin: 0 1% 16rpx 1%;
  overflow: hidden;
}
.momentWrap>.cont image,
.momentWrap>.cont video{
  width: 100%;
  height: inherit;
}
.momentWrap>.cont video{
  height: 100%;
}
.momentWrap>.time{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: relative;
  height: 60rpx;
  margin: 0 6% 12rpx 0;
  font-size: 24rpx;
}

.zanMoment{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 0;
  top: 0;
  width: 240rpx;
  height: 60rpx;
}
.zanMoment>view{
  flex: 1;
  font-size: 28rpx;
  text-align: center;
}
.zanMoment image{
  width: 36rpx;
  height: 30rpx;
  margin: 0 8rpx;
  vertical-align: middle;
}
.zanMoment text{
  vertical-align: middle;
}

.momentWrap>.zanList{
  height: 48rpx;
  margin-right: 6%;
  padding: 4rpx;
  background: #EEE;
  font-size: 28rpx;
  line-height: 48rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.momentWrap>.zanList>image{
  width: 36rpx;
  margin: 10rpx 4rpx;
  vertical-align: middle;
}
.momentWrap>.zanList>text{
  vertical-align: middle;
}

.momentWrap>.commentList{
  margin: 4rpx 6% 0 0;
  padding: 2rpx 16rpx;
  background: #EEE;
  font-size: 24rpx;
}
.momentWrap>.commentList>view{
  padding: 2px 0;
  word-wrap:break-word; 
  word-break:break-all;
  text-align: justify;
}



.addMoment{
  position: fixed;
  bottom: 100rpx;
  right: 80rpx;
  width: 90rpx;
}


.maskWrap{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.6);
}
.maskWrap>input{
  position: absolute;
  top: 44%;
  left: 10%;
  width: 80%;
  height: 6%;
  padding: 12rpx 8rpx;
  background: #FFF;
  border-bottom: 4rpx solid #E44242;
  font-size: 28rpx;
}

.maskWrap>button{
  position: fixed;
  bottom: 20rpx;
  left: 10%;
  width: 80%;
  color: #FFF;
  background: #3A96FE;
}


.picBanner{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
}
.swiper,
.swiperItem,
.slide-image{
  width: 100%;
  height: 100%;
} 