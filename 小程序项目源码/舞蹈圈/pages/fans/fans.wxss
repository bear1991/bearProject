/* pages/fans/fans.wxss */

 .container{
  background: #F0F0F0;
} 

.header{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 10%;
}

.listTitle{
  width: 96%;
  height: 6%;
  margin: 0 auto;
}
.listTitle>text{
  flex: 4;
  text-align: center;
  font-size: 32rpx;
}
.listTitle>text:first-child{
  flex: 1;
}


.content{
  width: 100%;
  height: 100prx;
  font-size: 24rpx;
}
.scrollView{
  width: 96%;
  height: 100%;
  margin: 0 auto;
}
.listTitle,
.scroll{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.scroll{
  margin: 24rpx 0;
  padding: 12rpx 0;
  background: white;
  border-radius: 8rpx; 
}
.listIndex{
  flex: 1;
  text-align: center;
}
.pictureName{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.picture{
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}
.pictureName,
.email{
  flex: 4
}
.email{
  text-align: center;
}



.fansDetail{
  position: fixed;
  left: 0;
  top: 100%;
  z-index: 9;
  width: 100%;
  height: 100%;
  background: #0F0F1B;
  transition: 0.6s;
}
.close{
  position: absolute;
  top: 3%;
  right: 5%;
}
.title{
  padding: 32rpx 0;
  text-align: center;
  font-size: 36rpx;
}
.detail{
  padding: 4%;
  font-size: 32rpx;
}
.detail>view{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin: 20rpx 0;
}
.detail>view:first-child{
  margin: 0;
}
.detail>view>text,
.detail>view>view{
  flex: 6;
}
.detail>view>text:first-child{
  flex: 2;
  text-align: right;
}
.detail>view image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}


.active{
  top: 0;
} 

.follow{
  width: 80%;
  margin: 60rpx auto 40rpx;
}