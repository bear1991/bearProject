/* pages/my/my.wxss */

.header{
  position: relative;
  width: 100%;
  margin-bottom: 40rpx;
  padding: 40rpx 0 60rpx;
  text-align: center;
  color: #FFF;
}

.header>.mybg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.header>button{
  width: 36%;
  height: 80rpx;
  margin: 60rpx auto 20rpx;
  border-color: #FFF;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #FFF;
}

.header>.member{
  margin: 0 40rpx 40rpx 0;
  text-align: right;
  font-size: 28rpx;
}

.picWrap{
  width: 180rpx;
  height: 180rpx;
  margin: 0 auto 20rpx;
  border: 6rpx solid #FFF;
  border-radius: 50%;
}
.picWrap>image{
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 50%; 
}

.content{
  width: 100%;
  color: #FFF;
  font-size: 32rpx;
}

.listWrap{
  margin-bottom: 28rpx;
  background: #191A2C;
}
.listWrap>.list:first-child{
  border-bottom: 1rpx solid rgba(225,225,225,0.1); 
}
.list{
  padding: 30rpx 40rpx;
}
.list:after{
  content: "";
  display: block;
  clear: both;
}
.list>.icon{
  float: left;
  width: 36rpx;
  height: 36rpx;
  margin-top: 6rpx;
}
.list>.turnRt{
  float: right;
  width: 32rpx;
  height: 32rpx;
  margin-top: 8rpx;
}
.list>text{
  float: left;
  margin-left: 20rpx;
}
