/* pages/person/person.wxss */
.list{
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  margin-top: 24rpx;
  padding: 30rpx 0;
  background: #FFF;
  font-size: 36rpx;
}

.login{
  justify-content: center;
}
.exit>button{
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 42rpx;
}

.list-cont{
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
}

/****** person ******/
.person-pic{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%; 
  overflow: hidden;
}
.person-pic>image{
  width: 100%;
  height: 100%;
}
.person-nameid{
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 300rpx;
  margin-left: 30rpx;
}
.person-name{
  font-size: 36rpx;
}


/****** infor---about ******/
.inforabout-icon{
  width: 45rpx;
  height: 44rpx;
  margin-right: 30rpx;
}
.inforabout-text{
  align-self: center;
}



.list-icon{
  align-self: center;
  width: 18rpx;
  height: 32rpx;
  margin-right: 30rpx;
}
.list-icon>image{
  width: 100%;
  height: 100%;
}
