/* pages/index/task/task.wxss */

/****** 任务列表 ******/
.task-list-wrap{
  width: 100%;
  height: 100%;
  margin-top: 138rpx;
  overflow-y: auto;
}

.wait{
  color: #D97273;
}
.sure{
  color: #5CB55B;
}


.step-cont{
  margin-bottom: 24rpx; 
  padding:20rpx 0; 
  background: #FFF;
}
.col,
.row{
  margin: 0 30rpx;
  font-size: 30rpx;
}
.row,
.col>view{
  padding: 8rpx 0;
}
.col{
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  justify-content: space-between
}
.col:first-child view:last-child{
  line-height: 12rpx;
}
.step-cont>view:nth-child(2).col.move>view:first-child{
  padding: 16rpx 0 0; 
}






