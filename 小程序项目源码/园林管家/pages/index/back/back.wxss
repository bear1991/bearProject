/* pages/index/feedback/feedback.wxss */

.container{
  position: relative;
}


/****** 反馈列表 ******/
.back-list-wrap{
  width: 100%;
  height: 100%;
  overflow-y: auto;
}
.back-list{
  width: 100%;
  margin-top: 24rpx;
  background: #FFF;
  font-size: 30rpx;
  overflow: hidden;
}
.back-list>view{
  margin: 24rpx 30rpx;
}
.back-id{
  color: #87CA87;
}
.back-cont{
  font-size: 34rpx;
}
.back-time{
  color: #888888;
}
.back-response{
  padding-top: 20rpx;
  border-top: 1rpx solid #F6F6F6;
  color: #888888; 
  line-height: 40rpx;
}
.back-response>text{
  display: block;
  margin-bottom: 16rpx;
}

/****** 图片展示 ******/
.task-pic-list{
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
  margin: 20rpx 0;
}
.task-pic{
  display: block;
  width: 150rpx;
  height: 150rpx;
  margin: 10rpx 18rpx;
  border-radius: 10rpx;
}

/****** 附件展示  ******/
.linkList>text{
  display: block;
  width: 600rpx;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 18rpx;
  white-space: nowrap;  
  overflow: hidden;
  text-overflow: ellipsis;
}
.linkList>text:first-child{
  height: 80rpx;
  line-height: 64rpx;
  font-size: 34rpx;
}
.linkSource{
  margin-left: 60rpx; 
}


/****** 添加评论按钮 ******/
.addBackdetail{
  position: fixed;
  bottom: 80rpx;
  right: 60rpx;
  width: 120rpx;
  height: 120rpx;
}
.addBackdetail>image{
  width: 100%;
  height: 100%;
}
