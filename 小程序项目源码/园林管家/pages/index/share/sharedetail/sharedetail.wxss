/* pages/index/share/sharecont/sharecont.wxss */
@import "../../../../wxParse/wxParse.wxss";


/****** 资讯分享详情页 ******/
.share-detail{
  width: 100%;
  height: 1182rpx;
  margin-top: 24rpx; 
  background: #FFF;
}

/****** 详情页头部 ******/
.detail-header{
  margin: 0 30rpx 50rpx;
}
.detail-header-tp{
  margin: 30rpx 0; 
  font-size: 46rpx;
  text-align: justify;
}
.detail-header-bt{
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.detail-header-bt>view{
  color: #757575;
  font-size: 28rpx;
}

/****** 详情页主体 ******/
.detail-content{
  margin: 0 30rpx;
  color: #6C6C6C;
  text-align: justify;
}
